{
    "name": "boilerplate-kaspa",
    "version": "0.0.1",
    "private": true,
    "description": "Boilerplate for nextjs frontend projects",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "prepare": "husky install",
        "postinstall": "husky install",
        "commitlint": "commitlint",
        "format": "prettier --ignore-path .gitignore --write .  &&  eslint --ignore-path .gitignore --fix .",
        "lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-path .gitignore .",
        "test": "jest --watch --coverage"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "npx eslint src --fix --quiet"
        }
    },
    "dependencies": {
        "next": "^13.1.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-error-boundary": "^3.1.4",
        "react-icons": "^4.7.1",
        "recoil": "^0.7.6",
        "swr": "^2.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.2",
        "@commitlint/config-conventional": "^17.4.2",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@types/node": "18.0.3",
        "@types/react": "18.0.15",
        "@types/react-dom": "18.0.6",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "8.19.0",
        "eslint-config-next": "12.2.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.0",
        "install": "^0.13.0",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "lint-staged": "^13.0.3",
        "npm": "^9.3.0",
        "prettier": "^2.8.3",
        "typescript": "4.7.4"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
